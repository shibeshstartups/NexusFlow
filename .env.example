# Frontend Environment Variables for NexusFlow

# Google OAuth Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com/)
# 1. Enable Google+ API
# 2. Create OAuth 2.0 Client ID
# 3. Add your domain to authorized origins
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api

# Environment
VITE_NODE_ENV=development

# Backend API URL (adjust based on your deployment)
VITE_API_URL=http://localhost:5000

# R2 CDN Configuration (public information only)
VITE_R2_CDN_ENABLED=true
VITE_R2_PUBLIC_DOMAIN=files.yourdomain.com
VITE_R2_DEV_SUBDOMAIN=your-bucket-name

# Storage Configuration
VITE_MAX_FILE_SIZE=5368709120
VITE_SUPPORTED_FILE_TYPES=image/*,video/*,audio/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/*

# Upload Configuration
VITE_CHUNK_SIZE=5242880
VITE_MAX_CONCURRENT_UPLOADS=3
VITE_RETRY_ATTEMPTS=3

# UI Configuration
VITE_ENABLE_PROGRESS_BAR=true
VITE_ENABLE_THUMBNAILS=true
VITE_ENABLE_PREVIEW=true

# Performance Settings
VITE_ENABLE_LAZY_LOADING=true
VITE_THUMBNAIL_SIZES=150,300,600
VITE_ENABLE_IMAGE_OPTIMIZATION=true

# CDN Features
VITE_ENABLE_RESPONSIVE_IMAGES=true
VITE_ENABLE_WEBP_CONVERSION=true
VITE_ENABLE_PROGRESSIVE_LOADING=true

# Security (frontend-safe values only)
VITE_ENABLE_FILE_VALIDATION=true
VITE_ENABLE_VIRUS_SCANNING=false

# Analytics
VITE_ENABLE_UPLOAD_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Real-time Features
VITE_ENABLE_REAL_TIME_NOTIFICATIONS=true
VITE_WEBSOCKET_URL=ws://localhost:5000

# PWA Features
VITE_ENABLE_OFFLINE_UPLOAD=true
VITE_ENABLE_BACKGROUND_SYNC=true

# Development Settings
VITE_ENABLE_DEBUG_LOGS=true
VITE_ENABLE_MOCK_UPLOADS=false

# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Sentry Configuration
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0
VITE_SENTRY_SAMPLE_RATE=1.0
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# LogRocket Configuration  
VITE_LOGROCKET_APP_ID=your-logrocket-app-id

# Application Configuration
VITE_APP_NAME=NexusFlow
VITE_APP_VERSION=1.0.0
VITE_API_BASE_URL=https://api.nexusflow.com
VITE_CDN_BASE_URL=https://cdn.nexusflow.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_SESSION_REPLAY=true

# Storage Configuration
VITE_MAX_FILE_SIZE=5368709120
VITE_SUPPORTED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp4,mov,avi,pdf,zip,rar

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
