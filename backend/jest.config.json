{
  "preset": "@jest/preset-default",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/tests",
    "<rootDir>/src"
  ],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/**/*.d.ts",
    "!src/server.js",
    "!src/config/**",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "json-summary"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 75,
      "lines": 80,
      "statements": 80
    },
    "./src/services/": {
      "branches": 80,
      "functions": 85,
      "lines": 90,
      "statements": 90
    }
  },
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.js"
  ],
  "testTimeout": 30000,
  "maxWorkers": "50%",
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "verbose": true,
  "forceExit": true,
  "clearMocks": true,
  "restoreMocks": true,
  "resetModules": true,
  "globals": {
    "__TEST__": true
  }
}