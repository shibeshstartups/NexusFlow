{
  "name": "nexusflow-backend",
  "version": "1.0.0",
  "description": "Backend server for NexusFlow storage platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:performance": "jest --testPathPattern=performance",
    "test:load": "node tests/utils/performanceUtils.js",
    "optimize": "node scripts/optimizePerformance.js",
    "benchmark": "npm run test:performance && npm run optimize",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "multer-gridfs-storage": "^5.0.2",
    "gridfs-stream": "^1.1.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "sharp": "^0.33.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "mime-types": "^2.1.35",
    "archiver": "^6.0.1",
    "dotenv": "^16.3.1",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@aws-sdk/lib-storage": "^3.490.0",
    "multer-s3": "^3.0.1",
    "redis": "^4.6.7",
    "ioredis": "^5.3.2",
    "bull": "^4.11.4",
    "bull-board": "^2.1.3",
    "socket.io": "^4.7.4",
    "socket.io-redis": "^6.1.1",
    "@sentry/node": "^7.81.1",
    "@sentry/profiling-node": "^7.81.1",
    "prometheus-api-metrics": "^3.2.2",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}