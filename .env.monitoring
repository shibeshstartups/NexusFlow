# Performance Monitoring Configuration

# Sentry Configuration (Frontend)
VITE_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_organization
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Sentry Configuration (Backend)
SENTRY_DSN=your_backend_sentry_dsn_here

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Web Vitals Configuration
WEB_VITALS_ENDPOINT=/api/analytics/web-vitals
WEB_VITALS_SAMPLE_RATE=1.0

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_SAMPLE_RATE=1.0

# Real User Monitoring
RUM_ENABLED=true
RUM_SAMPLE_RATE=0.1

# Performance Thresholds
PERFORMANCE_BUDGET_LCP=2500
PERFORMANCE_BUDGET_FID=100
PERFORMANCE_BUDGET_CLS=0.1
PERFORMANCE_BUDGET_FCP=1800
PERFORMANCE_BUDGET_TTFB=800

# Monitoring Alerts
ALERT_WEBHOOK_URL=your_webhook_url_here
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_RESPONSE_TIME=2000