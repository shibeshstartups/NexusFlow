# Production Environment Variables for NexusFlow
# Copy this file to .env.production for production deployment

# API Configuration
VITE_API_BASE_URL=https://api.nexusflow.in
VITE_CDN_BASE_URL=https://cdn.nexusflow.in
VITE_STORAGE_BASE_URL=https://storage.nexusflow.in

# Authentication
VITE_JWT_SECRET=your-super-secure-jwt-secret-key-here
VITE_JWT_EXPIRES_IN=7d
VITE_REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Payment Gateway (Razorpay)
VITE_RAZORPAY_KEY_ID=your-razorpay-key-id
VITE_RAZORPAY_KEY_SECRET=your-razorpay-key-secret
VITE_RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Monitoring & Analytics
VITE_SENTRY_DSN=your-sentry-dsn-url
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0
VITE_LOGROCKET_APP_ID=your-logrocket-app-id
VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-measurement-id

# Storage Configuration  
VITE_S3_BUCKET_NAME=nexusflow-production
VITE_S3_REGION=ap-south-1
VITE_S3_ACCESS_KEY_ID=your-s3-access-key
VITE_S3_SECRET_ACCESS_KEY=your-s3-secret-key
VITE_R2_ACCOUNT_ID=your-cloudflare-r2-account-id
VITE_R2_ACCESS_KEY_ID=your-r2-access-key
VITE_R2_SECRET_ACCESS_KEY=your-r2-secret-key

# CDN Configuration
VITE_CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
VITE_CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Database
VITE_MONGODB_URI=mongodb://your-mongodb-connection-string
VITE_REDIS_URL=redis://your-redis-connection-string

# Email Service
VITE_EMAIL_SERVICE_API_KEY=your-email-service-api-key
VITE_EMAIL_FROM=noreply@nexusflow.in

# App Configuration
VITE_APP_NAME=NexusFlow
VITE_APP_URL=https://nexusflow.in
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_MONITORING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# Performance
VITE_ENABLE_CDN=true
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_CORS=true